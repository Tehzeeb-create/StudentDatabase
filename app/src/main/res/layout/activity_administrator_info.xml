<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/student">




    <ImageView
        android:id="@+id/adminImageView"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:src="@drawable/admin"
        android:background="@drawable/rounded_corners"
        android:scaleType="centerCrop">

    </ImageView>

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin@example.com"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/blue"/>

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Master in business administration, I'm professional in handling any task related administration and management."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_marginTop="8dp"/>
    <Button
        android:id="@+id/readfeedbackbutton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Read Feedback"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
    <Button
        android:id="@+id/adminButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Back to Main"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>
</LinearLayout>
