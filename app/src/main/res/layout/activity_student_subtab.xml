<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/student">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/background_layout">

        <ImageView
            android:id="@+id/imageViewStudentSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contentDescription="Student Search"
            android:layout_marginTop="10dp"
            android:onClick="onStudentSearchClick"
            android:src="@drawable/search"
            android:layout_weight="8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Student Search"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/background_layout"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/imageViewStudentEntry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:contentDescription="Student Entry"
            android:onClick="onStudentEntryClick"
            android:src="@drawable/entry"
            android:layout_weight="8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Entry"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>
